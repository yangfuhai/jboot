                        <configuration>
                            <windowtitle>Jboot</windowtitle>
                            <doctitle>Jboot</doctitle>
                            <show>private</show>
                            <detectLinks>false</detectLinks>
                            <detectOfflineLinks>true</detectOfflineLinks>
